{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Air",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Debug LiveReview API (direct)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/LiveReview/livereview.go",
            "args": [
                "--config",
                "${workspaceFolder}/LiveReview/livereview.toml",
                "api"
            ],
            "cwd": "${workspaceFolder}/LiveReview",
            "env": {},
            "showLog": true
        }
    ]
}
