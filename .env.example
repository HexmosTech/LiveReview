# LiveReview Environment Configuration
# Copy this file to .env and update the values

# Database password (required for Docker setup)
# Generate a secure password for PostgreSQL
DB_PASSWORD=your_secure_database_password_here

# Database connection string (auto-configured in Docker)
# For local development: postgres://livereview:your_password@localhost:5432/livereview?sslmode=disable
# For Docker: postgres://livereview:${DB_PASSWORD}@livereview-db:5432/livereview?sslmode=disable
DATABASE_URL=postgres://livereview:${DB_PASSWORD}@livereview-db:5432/livereview?sslmode=disable

# JWT Secret Key (required for authentication)
# Generate a secure random string for production
JWT_SECRET=your_secure_jwt_secret_key_here

# FW-Parse Admin Secret (required for self-hosted license generation)
# Obtain from fw-parse bootstrap endpoint
FW_PARSE_ADMIN_SECRET=your_fw_parse_admin_secret_here

# Razorpay Mode (for payment processing)
# Set to "test" for development/testing (no real charges, use test keys)
# Set to "live" for production (real charges, use live keys)
# Default: "test" (if not specified)
RAZORPAY_MODE=test

# Razorpay Plan IDs - TEST mode (obtain by creating plans in Razorpay test dashboard)
RAZORPAY_TEST_MONTHLY_PLAN_ID=plan_S50P5yGDs6pyU3
RAZORPAY_TEST_YEARLY_PLAN_ID=plan_S50P6Wet8iuMYP

# Razorpay Plan IDs - LIVE mode (obtain from Razorpay live dashboard)
RAZORPAY_LIVE_MONTHLY_PLAN_ID=your_live_monthly_plan_id
RAZORPAY_LIVE_YEARLY_PLAN_ID=your_live_yearly_plan_id

# Razorpay Webhook Secret (required for payment webhook verification)
# Obtain from Razorpay dashboard -> Webhooks section
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# LiveReview version (auto-set by lrops.py)
LIVEREVIEW_VERSION=tip

# Optional: Log level
LOG_LEVEL=info

# Optional: Session token durations
# ACCESS_TOKEN_DURATION_HOURS=8     # Default: 8 hours
# REFRESH_TOKEN_DURATION_DAYS=30    # Default: 30 days

# Optional: API configuration
# OPENAI_API_KEY=your_openai_api_key
# GOOGLE_AI_API_KEY=your_google_ai_api_key
