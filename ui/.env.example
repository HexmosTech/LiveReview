# LiveReview UI Configuration
# Copy this file to .env and fill in values as needed

# Deployment mode (set to 'true' for cloud, 'false' or empty for selfhosted)
LIVEREVIEW_IS_CLOUD=false

# =============================================================================
# CLOUD-ONLY: Analytics and Notifications
# Leave empty for selfhosted deployments - features will be disabled
# =============================================================================

# Microsoft Clarity analytics (cloud only)
# LR_CLARITY_ID=

# Discord webhook for signup notifications (cloud only)
# LR_DISCORD_WEBHOOK_URL=

# Listmonk mailing list subscription (cloud only)
# LR_LISTMONK_URL=
# LR_LISTMONK_LIST_ID=

# PostHog analytics (cloud only)
# VITE_PUBLIC_POSTHOG_KEY=
# VITE_PUBLIC_POSTHOG_HOST=
